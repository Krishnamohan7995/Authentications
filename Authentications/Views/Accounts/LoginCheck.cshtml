@model Authentications.Models.LoginModel
@{
    ViewBag.Title = "LoginCheck";
}

<div class="row " style="margin-top:40px;">
    <div class="col-sm-4 mx-auto rounded border p-4 ">
        <h2 class="text-center text-success text-decoration-underline text-uppercase">Login</h2>
        @using (Html.BeginForm())
        {
            <div class="row mt-3">
                <div class="col-sm-4">
                    @Html.LabelFor(e => e.Email)
                </div>
                <div class="col-sm-8">
                    @Html.EditorFor(e => e.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(e => e.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-4">
                    @Html.LabelFor(e => e.Pwd)
                </div>
                <div class="col-sm-8">
                    @Html.EditorFor(e => e.Pwd, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(e => e.Pwd, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-sm-4">
                    @Html.LabelFor(e => e.Rememberme)
                </div>
                <div class="col-sm-8">
                    @Html.EditorFor(e => e.Rememberme)
                    @Html.ValidationMessageFor(e => e.Rememberme, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row mt-3">
                <div class="col-sm-4 d-grid">
                    <input type="submit" value="Login" class="btn btn-success w-100" />
                </div>
                <div class="col-sm-4">
                    <input type="reset" value="Clear" class="btn btn-outline-danger w-100" />
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("Back", "Create", "", new { @class = "text-decoration-none btn btn-outline-primary w-100" })
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-sm-4">
                    Lost Password ?
                </div>
                <div class="col-sm-8">
                    @Html.ActionLink("Forget Now", "ForgetPassword", "", new { @class = "text-decoration-none text-success" })
                </div>
            </div>
             <div class="row mt-2">
                 <div class="col-sm-4">
         
                 </div>
                <div class="col-sm-8 ">
                    <h4 class="text-danger">@ViewBag.msg </h4> 
                </div>
             </div>

        }
    </div>
</div>

