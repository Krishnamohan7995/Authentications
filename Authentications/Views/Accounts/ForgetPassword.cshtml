@model Authentications.Models.ForgetModel
@{
    ViewBag.Title = "ForgetPassword";
}

<div class="row " style="margin-top:40px;">
    <div class="col-sm-6 mx-auto rounded border p-4 ">
        <h2 class="text-center text-primary text-decoration-underline text-uppercase">Forget Password</h2>
        @using (Html.BeginForm())
        {
            <div class="row mt-3">
                <div class="col-sm-4">
                    @Html.LabelFor(e => e.Email)
                </div>
                <div class="col-sm-8">
                    @Html.EditorFor(e => e.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(e => e.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-4">
                    @Html.LabelFor(e => e.Pwd)
                </div>
                <div class="col-sm-8">
                    @Html.EditorFor(e => e.Pwd, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(e => e.Pwd, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-sm-4">
                    @Html.LabelFor(e => e.Cpwd)
                </div>
                <div class="col-sm-8">
                    @Html.EditorFor(e => e.Cpwd, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(e => e.Cpwd, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row mt-3">
                <div class="col-sm-4 d-grid">
                    <input type="submit" value="Update" class="btn btn-primary w-100" />
                </div>
                <div class="col-sm-4">
                    <input type="reset" value="Clear" class="btn btn-outline-danger w-100" />
                </div>
                <div class="col-sm-4">
                    @Html.ActionLink("Back", "LoginCheck", "", new { @class = "text-decoration-none btn btn-outline-secondary w-100" })
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-sm-4">
                     New User ?
                </div>
                <div class="col-sm-2">
                    @Html.ActionLink("Click Here", "Create", "", new { @class = "text-decoration-none text-primary" })
                </div>
            </div>
        }
    </div>
</div>


